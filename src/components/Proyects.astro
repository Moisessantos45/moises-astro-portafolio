---
import { proyects } from "@cv";
import type { tecnology } from "../types/data";
import { technologiesColors } from "../types/data";
---

<section class="m-auto w-10/12">
  <div class="mb-6 text-2xl font-bold">
    <h1>Recent Projects</h1>
  </div>
  <section class="flex flex-col gap-6">
    {
      proyects.map((proyect) => (
        <>
          <article class="flex flex-col items-center gap-x-8 rounded-md bg-slate-800 p-3 md:flex-row">
            <figure class="flex justify-center items-center shrink-0">
              <img
                class="h-28 w-44 hover:translate-y-1 rounded-md transition-all"
                src={proyect.image}
                alt={proyect.name}
              />
            </figure>
            <div>
              <div class="flex flex-col items-center gap-y-2 md:flex-row">
                <h1 class="text-xl font-semibold hover:text-cyan-400">
                  {proyect.name}
                </h1>
                <div class="ml-3 flex gap-2 list-none">
                  {proyect.tecnologias.map((item) => (
                    <li
                      class={`rounded-md px-2 py-1 text-xs font-semibold ${technologiesColors[item as tecnology]}`}
                    >
                      {item}
                    </li>
                  ))}
                </div>
              </div>
              <p class="mt-3 text-gray-400">{proyect.description}</p>
            </div>
          </article>
        </>
      ))
    }
  </section>
</section>
