---
import type { TypeProyects } from "@/types/data";
import Links from "./Links.astro";

interface Props {
  proyect: TypeProyects;
}

const { proyect } = Astro.props;
---

<figure
  class="relative overflow-hidden rounded-lg bg-slate-800 shadow-lg transform transition-all duration-300 hover:shadow-2xl hover:scale-105 card__project"
>
  <span
    class="absolute top-2 left-2 bg-cyan-600 text-white text-xs font-bold px-2 py-1 rounded-full z-10"
  >
    {proyect.typeProyect}
  </span>
  <!-- <button
    id="likeButton"
    class="absolute top-2 right-2 bg-gray-600 bg-opacity-70 hover:bg-opacity-90 text-white rounded-full p-2 transition-all duration-300 z-10 flex items-center space-x-1"
    aria-label="Me gusta"
  >
    <i class="fa-regular fa-thumbs-up icon-like" data-id={proyect.id}></i>
    <span class="text-xs font-bold couter_like">{proyect.counter_likes}</span>
  </button> -->

  <img
    src={proyect.image}
    alt="Hero"
    class="w-full h-36 transition-transform transform hover:scale-110 object-fill"
    loading="lazy"
  />
  <div class="p-2 text-center">
    <h1
      class="text-xl font-bold mb-2 text-white hover:text-cyan-400 transition-colors"
    >
      {proyect.title}
    </h1>
    <div class="mb-4 h-24 overflow-hidden">
      <p class="mt-2 text-sm text-slate-200">
        {proyect.description.substring(0, 130)}....
      </p>
    </div>
    <div class="flex flex-wrap gap-2 justify-center">
      <Links
        link={proyect.link_github?.frontend || "#"}
        text="Frontend"
        icon="code"
      />
      <Links
        link={proyect.link_github?.backend || "#"}
        text="Backend"
        icon="code"
      />
      <Links link={`/Post/${proyect.id}`} text="Details" icon="external-link" />
      <Links link={proyect?.link || "#"} text="Website" icon="globe" />
    </div>
  </div>
</figure>

<script src="../scripts/observer_cards.ts"></script>
<!-- <script src="../scripts/couter_likes.ts"></script> -->

<style>
  @import url("https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css");
  .card__project {
    opacity: 0;
    transition: 150ms;
  }

  .show {
    opacity: 1;
  }
</style>
