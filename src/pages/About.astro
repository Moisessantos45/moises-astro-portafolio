---
import Footer from "@/components/Footer.astro";
import Layout from "../layouts/Layout.astro";
import Svg from "../components/Svg.astro";
import Experience from "@/components/section/Experience.vue";
import { skills } from "@skills";
import { URL_CV } from "astro:env/client";

interface Skill {
  skill: string;
  icon: string;
}

const currentSkills: Skill[] = skills;

const birthDate = new Date("2001-11-13");
const today = new Date();
const age = Math.floor(
  (today.getTime() - birthDate.getTime()) / (1000 * 60 * 60 * 24 * 365.25)
);

const startDate = new Date("2022-08-01");
const monthsDiff =
  (today.getFullYear() - startDate.getFullYear()) * 12 +
  (today.getMonth() - startDate.getMonth());
const semester = Math.min(Math.ceil(monthsDiff / 6), 10);
---

<Layout title="Moises Santos | Full Stack Developer">
  <main class="bg-[#0f172a] min-h-screen text-slate-300">
    <div class="relative overflow-hidden">
      <div
        class="absolute inset-0 bg-gradient-to-b from-cyan-500/10 to-transparent opacity-30 pointer-events-none"
      >
      </div>

      <section class="relative mx-auto max-w-5xl px-6 py-12">
        <a
          href="/"
          class="back-link inline-flex items-center gap-2 mb-8 px-4 py-2 text-sm font-medium text-slate-400 hover:text-cyan-300 transition-all duration-300 group"
        >
          <svg
            class="w-5 h-5 transform group-hover:-translate-x-1 transition-transform duration-300"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 19l-7-7 7-7"></path>
          </svg>
          Back to Home
        </a>

        <header
          class="flex flex-col lg:flex-row items-center gap-8 mb-16 animate-fade-in"
        >
          <div
            class="relative w-48 h-48 rounded-full overflow-hidden border-4 border-cyan-500/30 shadow-2xl shadow-cyan-500/20 flex-shrink-0"
          >
            <img
              src="https://res.cloudinary.com/dtkskpitc/image/upload/f_webp,q_auto/v1723951107/cv-proyects/niwkkte9km7amzss4hwb"
              alt="Moises Santos"
              class="w-full h-full object-cover"
            />
          </div>

          <div class="text-center lg:text-left flex-1">
            <h1
              class="text-4xl sm:text-5xl font-bold mb-2 text-transparent bg-clip-text bg-gradient-to-r from-sky-400 to-cyan-300"
            >
              Moises Santos
            </h1>
            <p class="text-xl text-slate-400 mb-4">
              Full Stack Developer & ISE Student
            </p>

            <div
              class="flex flex-wrap justify-center lg:justify-start gap-3 mb-6"
            >
              <span
                class="px-3 py-1 text-sm bg-emerald-500/20 text-emerald-300 rounded-full"
              >
                ‚úì Available for projects
              </span>
              <span
                class="px-3 py-1 text-sm bg-slate-700/50 text-slate-300 rounded-full"
              >
                üìç San Luis Potos√≠, Mexico
              </span>
            </div>

            <div class="flex flex-wrap justify-center lg:justify-start gap-4">
              <a
                href="https://github.com/Moisessantos45"
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-2 px-4 py-2 text-sm font-medium text-slate-300 bg-slate-700/50 rounded-lg hover:bg-slate-600/50 transition-all duration-300 border border-slate-600/50"
              >
                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                  <path
                    d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                  ></path>
                </svg>
                GitHub
              </a>
              <a
                href="https://www.linkedin.com/in/moises-santos-hern%C3%A1ndez-31192b290/"
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-2 px-4 py-2 text-sm font-medium text-slate-300 bg-slate-700/50 rounded-lg hover:bg-slate-600/50 transition-all duration-300 border border-slate-600/50"
              >
                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                  <path
                    d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
                  ></path>
                </svg>
                LinkedIn
              </a>
              <a
                href="https://www.youtube.com/@moy_4520"
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-2 px-4 py-2 text-sm font-medium text-slate-300 bg-slate-700/50 rounded-lg hover:bg-slate-600/50 transition-all duration-300 border border-slate-600/50"
              >
                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                  <path
                    d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"
                  ></path>
                </svg>
                YouTube
              </a>
              <a
                href="https://www.facebook.com/people/WebDev-by-Moises/61556653184440/"
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-2 px-4 py-2 text-sm font-medium text-slate-300 bg-slate-700/50 rounded-lg hover:bg-slate-600/50 transition-all duration-300 border border-slate-600/50"
              >
                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                  <path
                    d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"
                  ></path>
                </svg>
                Facebook
              </a>
            </div>
          </div>
        </header>

        <div class="grid md:grid-cols-2 gap-8">
          <div class="space-y-6">
            <div
              class="bg-slate-800/50 backdrop-blur-sm rounded-2xl p-8 shadow-xl hover:shadow-cyan-500/10 transition-all duration-300 border border-slate-700/50 animate-fade-in-up"
              style="animation-delay: 0.1s"
            >
              <div class="flex items-center gap-4 mb-4">
                <div class="p-3 bg-cyan-500/20 rounded-xl">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="w-6 h-6 text-cyan-300"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                    ></path>
                  </svg>
                </div>
                <h3 class="text-2xl font-bold text-white">Who am I?</h3>
              </div>
              <p class="text-lg leading-relaxed text-slate-300">
                Hello! I'm <strong class="text-cyan-300">Moises</strong>, a <strong
                  class="text-cyan-300">{age}-year-old</strong
                >
                <strong class="text-cyan-300"
                  >Intelligent Systems Engineering</strong
                > student at UASLP, currently in my <strong
                  class="text-cyan-300">{semester}th semester</strong
                >. My passion is web development, where I've perfected my skills
                in <strong class="text-white">HTML, CSS, and JavaScript</strong
                >, along with modern frameworks like <strong class="text-white"
                  >React, Astro, and Tailwind CSS</strong
                >.
              </p>
            </div>

            <div
              class="bg-slate-800/50 backdrop-blur-sm rounded-2xl p-8 shadow-xl hover:shadow-cyan-500/10 transition-all duration-300 border border-slate-700/50 animate-fade-in-up"
              style="animation-delay: 0.2s"
            >
              <div class="flex items-center gap-4 mb-4">
                <div class="p-3 bg-cyan-500/20 rounded-xl">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="w-6 h-6 text-cyan-300"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
                    ></path>
                  </svg>
                </div>
                <h3 class="text-2xl font-bold text-white">My Experience</h3>
              </div>
              <p class="text-lg leading-relaxed text-slate-300">
                My experience extends to backend development with <strong
                  class="text-white">Python and FastAPI</strong
                >, as well as <strong class="text-white"
                  >Node.js and Express</strong
                >. I have extensive experience in database management using <strong
                  class="text-white">MongoDB and MySQL</strong
                >, and I'm proficient in <strong class="text-white"
                  >TypeScript</strong
                >, API development, and working with ORMs.
              </p>
            </div>
          </div>

          <div class="space-y-6">
            <div
              class="bg-slate-800/50 backdrop-blur-sm rounded-2xl p-8 shadow-xl hover:shadow-cyan-500/10 transition-all duration-300 border border-slate-700/50 animate-fade-in-up"
              style="animation-delay: 0.3s"
            >
              <div class="flex items-center gap-4 mb-4">
                <div class="p-3 bg-cyan-500/20 rounded-xl">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="w-6 h-6 text-cyan-300"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
                    ></path>
                  </svg>
                </div>
                <h3 class="text-2xl font-bold text-white">My Career</h3>
              </div>
              <p class="text-lg leading-relaxed text-slate-300">
                Throughout my career, I've demonstrated a strong work ethic and
                an insatiable appetite for learning. My portfolio includes
                diverse projects, from Facebook pages to <strong
                  class="text-white">custom websites</strong
                > for individual clients and <strong class="text-white"
                  >academic projects</strong
                >.
              </p>
            </div>

            <div
              class="bg-slate-800/50 backdrop-blur-sm rounded-2xl p-8 shadow-xl hover:shadow-cyan-500/10 transition-all duration-300 border border-slate-700/50 animate-fade-in-up"
              style="animation-delay: 0.4s"
            >
              <div class="flex items-center gap-4 mb-4">
                <div class="p-3 bg-cyan-500/20 rounded-xl">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="w-6 h-6 text-cyan-300"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                  </svg>
                </div>
                <h3 class="text-2xl font-bold text-white">My Ambition</h3>
              </div>
              <p class="text-lg leading-relaxed text-slate-300">
                As a young and ambitious professional, I'm eager to push the
                boundaries of intelligent systems engineering. I'm ready to
                embrace new challenges and make significant contributions to the
                technological world with my skills and enthusiasm.
              </p>
            </div>
          </div>
        </div>

        <div
          class="mt-12 flex flex-wrap justify-center gap-4 animate-fade-in-up"
          style="animation-delay: 0.5s"
        >
          <a
            href="/#projects"
            class="flex items-center gap-2 px-6 py-3 text-sm font-medium bg-gradient-to-r from-cyan-500 to-blue-500 text-white rounded-lg hover:from-cyan-400 hover:to-blue-400 transition-all duration-300 shadow-lg shadow-cyan-500/25 hover:scale-105"
          >
            <svg
              class="w-5 h-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
              ></path>
            </svg>
            View My Projects
          </a>
          <a
            href={URL_CV}
            target="_blank"
            class="flex items-center gap-2 px-6 py-3 text-sm font-medium text-cyan-300 bg-cyan-500/10 rounded-lg hover:bg-cyan-400/20 transition-all duration-300 border border-cyan-500/30"
          >
            <svg
              class="w-5 h-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
              ></path>
            </svg>
            Download CV
          </a>
        </div>
      </section>

      <Experience client:load />

      <section class="relative mx-auto max-w-5xl px-6 py-20">
        <h2
          class="text-4xl font-bold text-center mb-16 text-transparent bg-clip-text bg-gradient-to-r from-sky-400 to-cyan-300 animate-fade-in"
        >
          Technical Skills
        </h2>
        <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-6">
          {
            currentSkills.map((item, index) => (
              <article
                class="group bg-slate-800/50 backdrop-blur-sm rounded-2xl p-6 shadow-xl hover:shadow-cyan-500/10 transition-all duration-300 border border-slate-700/50 hover:border-cyan-500/30 animate-fade-in-up"
                style={`animation-delay: ${0.1 + index * 0.05}s`}
              >
                <div class="flex flex-col items-center gap-4">
                  <div class="transform transition-all duration-300 group-hover:scale-110">
                    <Svg icon={item.icon} />
                  </div>
                  <span class="text-lg font-medium text-slate-200 group-hover:text-cyan-300 transition-colors duration-300">
                    {item.skill}
                  </span>
                </div>
              </article>
            ))
          }
        </div>
      </section>
    </div>
  </main>
  <Footer />
</Layout>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fadeIn 0.6s ease-out forwards;
  }

  .animate-fade-in-up {
    opacity: 0;
    animation: fadeInUp 0.6s ease-out forwards;
  }

  .back-link {
    animation: fadeIn 0.4s ease-out forwards;
  }

  main {
    font-family: "Lato", system-ui, sans-serif;
  }

  h1,
  h2,
  h3 {
    font-family: "Helvetica", system-ui, sans-serif;
  }
</style>
